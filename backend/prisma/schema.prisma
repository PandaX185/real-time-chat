generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement()) 
  username String    @unique
  password String
  messages Message[]

  @@map("users")
}

model Message {
  id       Int    @id @default(autoincrement()) 
  content    String
  senderId   Int   
  receiverId Int   
  createdAt  DateTime @default(now())
  User       User?    @relation(fields: [senderId], references: [id])

  @@map("messages")
}